<div class="row">
  <div class="column middle">

    <h4>Please enter your changes below and click Save Changes</h4>

    <form action="/posts/<%= @post.slug %>" method="post">
      <input type="hidden" name="_method" value="patch">

      <label for="title">Title: </label>
      <input type="text" name="post[title]" id="title" value="<%= @post.title %>" />

      <br /><br />

      <label for="date">Date: </label>
      <input type="date" name="post[date]" id="date" value="<%= @post.date %>" />

      <br /><br />

      <label for="category">Category: </label>
      <select name="post[category]" id="category">
      <% Post.default_categories.each do |category| %>
        <option value="<%= category %>" <%= 'selected' if @post.category == category %>><%= category.titleize %></option>
      <% end %>
      </select>

      <br /><br />

      <label for="description">Description </label><br />
      <textarea name="post[description]" id="description" cols="50" rows="10"><%= @post.description %></textarea>

      <br /><br />

      <input type="submit" value="Save Changes" />
    </form>

  </div>
</div>
